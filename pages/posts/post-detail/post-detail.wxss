  height: 460rpx;
}
.author-data{
 flex-direction: row;
 margin-left: 30rpx;
 margin-top: 20rpx;
}
.avatar{
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
