.post-container{
  display: flex;
  flex-direction: column; 
  margin-top:20rpx;
  margin-bottom:40rpx;
  background:#fff;
  border-bottom:1px solid #ccc;
  border-top:1px solid #ccc;
  padding-bottom:5px;
}
.post-author-data{
   margin: 10rpx 5rpx;
   flex-direction:row; 
}
post-author{
  width: 50px;
  height: 50px;
  
}
.post-author{
  width: 100rpx;
  height: 100rpx;
   vertical-align: middle;
}
.post-data{
  padding-left:40rpx;
  vertical-align: middle;
}
.post-title{
  font-size: 42rpx;
  font-weight: 600;
  color: #333;
  margin:0 0 10px 10px;
}
.post-img{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom:15px;
}
.post-contain{
  color: #666; 
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  line-height: 16rpx;
  margin-left: 10rpx;
}
.post-like-img{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.post-like-text{
  line-height: 40rpx;
  margin-left: 10rpx;
  color: #666;
}